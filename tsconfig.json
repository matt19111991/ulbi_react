{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["./src/webpack/**/*.ts", "./src/webpack/**/*.tsx"],

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
